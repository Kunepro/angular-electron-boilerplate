{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/app",
    "strict": true
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts",
    "../window-interface/index.d.ts"
  ],
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
